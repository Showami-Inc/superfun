<h1>Profiles</h1>

<% if @profiles.any? %>
  <% @profiles.each do |profile| %>
    <div class="profile">
      <h2><%= profile.name %></h2>
      <p><%= profile.phone %></p>
      <p><%= link_to 'Edit Profile', edit_profile_path(profile) %></p>
    </div>
  <% end %>
<% else %>
  <p>No profiles found, make sure the seed file has been run with rake db:seed</p>
<% end %>